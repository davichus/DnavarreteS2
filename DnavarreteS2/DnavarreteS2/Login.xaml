<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DnavarreteS2.Login">
    <ContentPage.Content>
          <ScrollView>
         <StackLayout Orientation="Vertical" Padding="30" Spacing="40">  
            <BoxView HeightRequest="10"/>  
            <Image HorizontalOptions="Center" WidthRequest="300" Source="tch.png"/>  
            
                 <Label TextColor="#3399ff" HorizontalTextAlignment="Center" FontAttributes="Bold" Text="Iniciar Sesión" FlexLayout.AlignSelf="Center" FontSize="25"/>
                    <Entry x:Name="txtUsuario"  Placeholder="Ingrese Usuario"   
                            HeightRequest="40"
                           />  
                    <Entry x:Name="txtContrasena"  Placeholder="Ingrese Contraseña"   
                            HeightRequest="40"   
                           IsPassword="True"  
                           />  
           
              <Button x:Name="btnIniciar" Text="Iniciar Sesion" Clicked="btnIniciar_Clicked"
                   FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#159eee"  TextColor="White" />
        </StackLayout>
               </ScrollView>
    </ContentPage.Content>
</ContentPage>

